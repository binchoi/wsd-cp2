
<% layout('./layouts/layout.eta') %>

<h1>Begin the quiz by selecting the topic to study</h1>

<% if (it.topics && it.topics.length > 0) { %>

<ul>
<% it.topics.forEach(topic => { %>
  <li>
  <a href="/quiz/<%= topic.id %>"><%= topic.name %></a>
  </li>
<% }); %>
</ul>

<% } else { %>

<p>None available...</p>

<% } %>
